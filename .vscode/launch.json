    "version": "0.2.0",
    "configurations": [
        {
            "name": "scrapy crawl",
            "type": "debugpy",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "crawl",
                "idealista",
                "-o",
                "/data/debug.csv",
                "-t",
                "csv"
            ]
        },
        {
            "name": "Python: Launch Scrapy Spider",
            "type": "debugpy",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${workspaceFolder}/idealista/spiders/idealista_spider.py"
            ],
            "console": "integratedTerminal"
        }
    ]
}